{
  "description": "Claude-mem memory system hooks",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/scripts/smart-install.js\" >/dev/null 2>&1",
            "timeout": 300
          },
          {
            "type": "command",
            "command": "~/.bun/bin/bun \"${CLAUDE_PLUGIN_ROOT}/scripts/worker-service.cjs\" start >/dev/null 2>&1",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "~/.bun/bin/bun \"${CLAUDE_PLUGIN_ROOT}/scripts/context-hook.js\" >/dev/null 2>&1",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "~/.bun/bin/bun \"${CLAUDE_PLUGIN_ROOT}/scripts/user-message-hook.js\" >/dev/null 2>&1",
            "timeout": 60
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.bun/bin/bun \"${CLAUDE_PLUGIN_ROOT}/scripts/worker-service.cjs\" start >/dev/null 2>&1",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "~/.bun/bin/bun \"${CLAUDE_PLUGIN_ROOT}/scripts/new-hook.js\" >/dev/null 2>&1",
            "timeout": 60
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.bun/bin/bun \"${CLAUDE_PLUGIN_ROOT}/scripts/worker-service.cjs\" start >/dev/null 2>&1",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "~/.bun/bin/bun \"${CLAUDE_PLUGIN_ROOT}/scripts/save-hook.js\" >/dev/null 2>&1",
            "timeout": 120
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.bun/bin/bun \"${CLAUDE_PLUGIN_ROOT}/scripts/worker-service.cjs\" start >/dev/null 2>&1",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "~/.bun/bin/bun \"${CLAUDE_PLUGIN_ROOT}/scripts/summary-hook.js\" >/dev/null 2>&1",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
