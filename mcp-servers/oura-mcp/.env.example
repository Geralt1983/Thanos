# Oura API OAuth Credentials
# Get these from: https://cloud.ouraring.com/oauth/applications

# OAuth Client ID from your Oura application
OURA_CLIENT_ID=your_client_id_here

# OAuth Client Secret from your Oura application
OURA_CLIENT_SECRET=your_client_secret_here

# OAuth Access Token (obtained after completing OAuth flow)
# You can use the Oura API to generate a personal access token for testing
OURA_ACCESS_TOKEN=your_access_token_here

# Optional: OAuth Refresh Token (for automatic token renewal)
OURA_REFRESH_TOKEN=your_refresh_token_here

# Cache Configuration
# Path to SQLite cache database (relative to project root)
CACHE_DB_PATH=.cache/oura-health.db

# Cache TTL in seconds (default: 3600 = 1 hour)
CACHE_TTL=3600

# Rate Limiting Configuration
# Maximum requests per day (Oura API limit: 5000)
RATE_LIMIT_MAX_REQUESTS=5000

# Rate limit window in milliseconds (24 hours)
RATE_LIMIT_WINDOW=86400000

# Logging Configuration
# Set to 'debug', 'info', 'warn', or 'error'
LOG_LEVEL=info

# Enable request/response logging for debugging
DEBUG_API_CALLS=false
