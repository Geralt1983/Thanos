{
  "$schema": "../../Tools/adapters/mcp_config_schema.json",
  "description": "Test server configurations for MCP integration tests",
  "servers": [
    {
      "name": "workos-test",
      "transport": {
        "type": "stdio",
        "command": "node",
        "args": ["${WORKOS_MCP_PATH}"],
        "env": {
          "DATABASE_URL": "${DATABASE_URL}",
          "NODE_ENV": "test",
          "LOG_LEVEL": "info"
        }
      },
      "enabled": true,
      "tags": ["test", "workos", "primary"],
      "priority": 10,
      "description": "WorkOS MCP server for integration testing"
    },
    {
      "name": "context7-test",
      "transport": {
        "type": "sse",
        "url": "https://api.context7.com/mcp",
        "headers": {
          "Authorization": "Bearer ${CONTEXT7_API_KEY}",
          "Content-Type": "application/json"
        },
        "timeout": 30
      },
      "enabled": false,
      "tags": ["test", "context7", "remote"],
      "priority": 5,
      "description": "Context7 documentation search (optional)"
    },
    {
      "name": "filesystem-test",
      "transport": {
        "type": "stdio",
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-filesystem",
          "/tmp/mcp-test"
        ],
        "env": {}
      },
      "enabled": false,
      "tags": ["test", "filesystem", "optional"],
      "priority": 1,
      "description": "Filesystem server for testing (optional)"
    }
  ],
  "test_config": {
    "timeout": 30,
    "max_retries": 3,
    "concurrent_servers": 3,
    "benchmark_iterations": 10
  }
}
