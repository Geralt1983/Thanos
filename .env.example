# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google Calendar Integration
# OAuth 2.0 credentials from Google Cloud Console
# Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_CALENDAR_CLIENT_ID=your-google-oauth-client-id-here
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-oauth-client-secret-here
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:8080/oauth2callback

# ============================================================================
# Database Configuration (for WorkOS adapter)
# ============================================================================

# WorkOS PostgreSQL Database
DATABASE_URL=postgresql://user:password@localhost:5432/workos_db
# Or use separate WorkOS database URL
# WORKOS_DATABASE_URL=postgresql://user:password@localhost:5432/workos_db

# ============================================================================
# Health & Biometric API Keys
# ============================================================================

# Oura Ring API (Personal Access Token)
OURA_API_KEY=your_oura_personal_access_token
# Or use the newer variable name
# OURA_PERSONAL_ACCESS_TOKEN=your_oura_personal_access_token

# ============================================================================
# Knowledge Graph & Memory Systems
# ============================================================================

# Neo4j Graph Database (for MemOS knowledge graph)
NEO4J_URL=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password

# ChromaDB Vector Database (for MemOS semantic search)
CHROMADB_PATH=~/.chromadb

# ============================================================================
# MCP Configuration (Model Context Protocol)
# ============================================================================

# Enable MCP bridges for third-party server ecosystem
MCP_ENABLED=true

# MCP server configuration file path
MCP_CONFIG_PATH=config/mcp_servers.json

# MCP logging configuration
MCP_LOG_LEVEL=INFO
MCP_LOG_FILE=logs/mcp.log

# ============================================================================
# Optional: Third-Party MCP Server API Keys
# ============================================================================

# Context7 (for documentation lookup)
# CONTEXT7_API_KEY=your_context7_api_key

# Magic (for UI component generation)
# MAGIC_API_KEY=your_magic_api_key

# ============================================================================
# Optional: Performance Configuration
# ============================================================================

# Connection pool settings
MAX_CONNECTIONS=10
CONNECTION_TIMEOUT=30

# Circuit breaker settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Result caching
CACHE_ENABLED=true
CACHE_TTL=3600

# ============================================================================
# Optional: Logging Configuration
# ============================================================================

# General logging
LOG_LEVEL=INFO
LOG_FORMAT=standard
LOG_FILE=logs/thanos.log

# Production logging (JSON format for structured logs)
# LOG_FORMAT=json
# LOG_FILE=/var/log/thanos/app.log

# ============================================================================
# Optional: Development Settings
# ============================================================================

# Environment
NODE_ENV=development
PYTHONUNBUFFERED=1

# Set to 'production' for production deployment
ENVIRONMENT=development
