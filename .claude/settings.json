{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${THANOS_ROOT:-$HOME/Projects/Thanos}/Tools/time_tracker.py --context",
            "timeout": 2000,
            "continueOnError": true
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${THANOS_ROOT:-$HOME/Projects/Thanos}/hooks/session-start/thanos-start.sh",
            "timeout": 5000,
            "continueOnError": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${THANOS_ROOT:-$HOME/Projects/Thanos}/hooks/stop/thanos_voice.py",
            "timeout": 3000,
            "continueOnError": true
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${THANOS_ROOT:-$HOME/Projects/Thanos}/hooks/post-tool-use/voice-announce.py",
            "timeout": 2000,
            "continueOnError": true,
            "passStdin": true
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${THANOS_ROOT:-$HOME/Projects/Thanos}/hooks/session-end/summary.sh",
            "timeout": 5000,
            "continueOnError": true
          },
          {
            "type": "command",
            "command": "python3 ${THANOS_ROOT:-$HOME/Projects/Thanos}/hooks/session-end/memory_capture.py",
            "timeout": 10000,
            "continueOnError": true,
            "passStdin": true
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "hooks/statusline/thanos_status.sh 2>/dev/null || echo \"Thanos\"",
    "refreshMs": 10000,
    "enabled": true
  },
  "permissions": {
    "allow": [
      "mcp__claude-flow__:*"
    ],
    "deny": []
  },
  "claudeFlow": {
    "version": "3.0.0",
    "enabled": true,
    "modelPreferences": {
      "default": "claude-opus-4-5-20251101",
      "routing": "claude-3-5-haiku-20241022"
    },
    "swarm": {
      "topology": "hierarchical-mesh",
      "maxAgents": 15
    },
    "memory": {
      "backend": "hybrid",
      "enableHNSW": true
    },
    "neural": {
      "enabled": true
    },
    "learning": {
      "enabled": true,
      "autoTrain": true,
      "patterns": [
        "coordination",
        "optimization",
        "prediction"
      ],
      "retention": {
        "shortTerm": "24h",
        "longTerm": "30d"
      }
    }
  }
}
